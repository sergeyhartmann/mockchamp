[
    {
        "request": {
            "method": "GET",
            "pathCondition": "exact",
            "path": "/example1"
        },
        "response": {
            "httpStatus": 200,
            "body": "simple text response"
        }
    },

    {
        "request": {
            "method": "GET",
            "pathCondition": "exact",
            "path": "/example2"
        },
        "response": {
            "httpStatus": 200,
            "headers": {
                "Content-Type": "application/json"
            },
            "body": "{\"msg\": \"simple json response\"}"
        }
    },

    {
        "request": {
            "method": "GET",
            "pathCondition": "exact",
            "path": "/example3"
        },
        "response": {
            "httpStatus": 200,
            "headers": {
                "Content-Type": "application/json"
            },
            "bodyJson": {
                "msg": "simple json response"
            }
        }
    },

    {
        "request": {
            "method": "GET",
            "pathCondition": "exact",
            "path": "/example4"
        },
        "response": {
            "httpStatus": 200,
            "delayedBy": 1500,
            "headers": {
                "Content-Type": "application/json"
            },
            "bodyJson": [
                {"msg": "simple json response with delayed 1"},
                {"msg": "simple json response with delayed 2"},
                {"msg": "simple json response with delayed 3"}
            ]
        }
    }
]
